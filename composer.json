{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "sephsekla/jbr-digital",
	"description": "My personal site",
	"type": "project",
	"license": "GPL 2.0+",
	"authors": [
		{
			"name": "Joe Bailey-Roberts",
			"email": "dev@jbr.digital"
		}
	],
	"scripts": {
		"up": "docker-compose up -d",
		"down": "docker-compose stop",
		"wp": "docker-compose run wpcli"
	},
	"require-dev": {
		"humanmade/coding-standards": "^1.2"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true,
			"composer/installers": true
		}
	},
	"require": {
		"php": ">=8.0",
		"johnpbloch/wordpress": "^6.1",
		"humanmade/asset-loader": "^0.6.3"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"extra": {
		"installer-paths": {
			"content/mu-plugins/{$name}/": [
				"type:wordpress-muplugin",
				"humanmade/asset-loader"
			],
			"content/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"content/themes/{$name}/": [
				"type:wordpress-theme"
			]
		}
	}
}
